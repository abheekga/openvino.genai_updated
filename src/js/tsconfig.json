{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017", "dom"],
    "module": "Node16",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "newLine": "LF",
    "declarationDir": "types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "exclude": ["eslint.config.ts", "types/*"]
}
